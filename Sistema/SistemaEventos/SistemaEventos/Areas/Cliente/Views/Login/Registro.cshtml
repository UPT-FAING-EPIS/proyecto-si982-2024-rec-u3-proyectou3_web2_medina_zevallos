        <div class="mb-0 w-screen lg:w-[500px] card shadow-lg border-none shadow-slate-100 relative">
            <div class="!px-10 !py-12 card-body">
                <a href="#!">
                    <img src="assets/images/logo-light.png" alt="" class="hidden h-6 mb-8 dark:block">
                    <img src="assets/images/logo-dark.png" alt="" class="block h-6 mb-8 dark:hidden">
                </a>

                <h3 class="mb-6 text-2xl font-semibold lg:text-3xl text-slate-900 dark:text-white">Crear una cuenta</h3>

                @using (Html.BeginForm("Registrar", "Login", FormMethod.Post, new { @class = "space-y-4" }))
                {
                    <div>
                        @Html.LabelFor(m => m.Nombre, new { @class = "block text-sm font-medium" })
                        @Html.TextBoxFor(m => m.Nombre, new { @class = "input form-control py-2" })
                    </div>

                    <div>
                        @Html.LabelFor(m => m.Apellido, new { @class = "block text-sm font-medium" })
                        @Html.TextBoxFor(m => m.Apellido, new { @class = "input form-control py-2" })
                    </div>

                    <div>
                        @Html.LabelFor(m => m.Correo, new { @class = "block text-sm font-medium" })
                        @Html.TextBoxFor(m => m.Correo, new { @class = "input form-control py-2" })
                    </div>

                    <div>
                        @Html.LabelFor(m => m.Contrasena, new { @class = "block text-sm font-medium" })
                        @Html.PasswordFor(m => m.Contrasena, new { @class = "input form-control py-2" })
                    </div>

                    <div>
                        @Html.LabelFor(m => m.Celular, new { @class = "block text-sm font-medium" })
                        @Html.TextBoxFor(m => m.Celular, new { @class = "input form-control py-2" })
                    </div>

                    <div>
                        @Html.LabelFor(m => m.Direccion, new { @class = "block text-sm font-medium" })
                        @Html.TextBoxFor(m => m.Direccion, new { @class = "input form-control py-2" })
                    </div>

                    <div>
                        @Html.LabelFor(m => m.IdTipoU, "Tipo de usuario", new { @class = "block text-sm font-medium" })
                        @Html.DropDownListFor(m => m.IdTipoU, new SelectList(new[] { new { Value = "3", Text = "Cliente" } }, "Value", "Text"), new { @class = "input form-control py-2" })
                    </div>

                    <button type="submit" class="mt-4 btn-primary btn w-full">Registrarse</button>
                }
            </div>
        </div>

@{
    ViewBag.Title = "Subir Archivo";
}

<h2>Subir Archivo a Firebase Storage</h2>

@if (ViewBag.Message != null)
{
    <p>@ViewBag.Message</p>
    <p>URL de descarga: <a href="@ViewBag.DownloadUrl">@ViewBag.DownloadUrl</a></p>
}

@if (ViewBag.Error != null)
{
    <p>Error: @ViewBag.Error</p>
}

@using (Html.BeginForm("Upload", "Default", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <label for="file">Selecciona un archivo para subir:</label>
    <input type="file" name="file" required />
    <input type="submit" value="Subir" />
}
